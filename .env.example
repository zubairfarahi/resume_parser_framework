# Resume Parser Framework - Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# Application Settings
# ============================================================================
RESUME_PARSER_APP_NAME="Resume Parser Framework"
RESUME_PARSER_APP_VERSION="0.1.0"
RESUME_PARSER_DEBUG=false
RESUME_PARSER_ENVIRONMENT=development  # development, staging, production

# ============================================================================
# File Processing Settings
# ============================================================================
RESUME_PARSER_MAX_FILE_SIZE=10485760  # 10MB in bytes
RESUME_PARSER_PARSING_TIMEOUT=30      # seconds
RESUME_PARSER_EXTRACTION_TIMEOUT=30   # seconds

# ============================================================================
# Logging Settings
# ============================================================================
RESUME_PARSER_LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
RESUME_PARSER_LOG_FORMAT=console      # console or json
RESUME_PARSER_LOG_FILE=logs/resume_parser.log

# ============================================================================
# API Settings (if using FastAPI)
# ============================================================================
RESUME_PARSER_API_HOST=0.0.0.0
RESUME_PARSER_API_PORT=8000
RESUME_PARSER_API_KEY_ENABLED=false
RESUME_PARSER_API_KEY=your-secret-api-key-here

# ============================================================================
# LLM/AI Settings (for future use)
# ============================================================================
# OpenAI Configuration
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_MODEL=gpt-4
# OPENAI_TEMPERATURE=0.0

# Google Gemini Configuration
# GEMINI_API_KEY=your-gemini-api-key-here
# GEMINI_MODEL=gemini-pro

# ============================================================================
# Database Settings (for future use)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/resume_parser
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# ============================================================================
# Redis Settings (for future use)
# ============================================================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_MAX_CONNECTIONS=10

# ============================================================================
# Storage Settings
# ============================================================================
# STORAGE_TYPE=local  # local, s3, gcs
# STORAGE_PATH=./uploads

# AWS S3 Configuration (if using S3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=resume-parser-bucket
# AWS_REGION=us-east-1

# ============================================================================
# Security Settings
